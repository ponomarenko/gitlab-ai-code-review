{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI - Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": ["server", "--verbose"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI - Review",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": ["review", "--project", "${input:projectId}", "--mr", "${input:mrIid}", "--verbose"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI - Health Check",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": ["health", "--all", "--verbose"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI - Config",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": ["config", "--json", "--verbose"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug App (Server)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/app.js",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "outputCapture": "std"
    }
  ],
  "inputs": [
    {
      "id": "projectId",
      "type": "promptString",
      "description": "GitLab Project ID",
      "default": "123"
    },
    {
      "id": "mrIid",
      "type": "promptString",
      "description": "Merge Request IID",
      "default": "1"
    }
  ]
}
