# Server Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# GitLab Configuration
GITLAB_TOKEN=glpat-your_gitlab_personal_access_token_here
GITLAB_URL=https://gitlab.com
GITLAB_WEBHOOK_SECRET=your_webhook_secret_here

# Dify Configuration
DIFY_API_KEY=app-your_dify_api_key_here
DIFY_API_URL=https://api.dify.ai/v1
DIFY_USER=gitlab-bot

# Review Configuration
MAX_FILES_PER_REVIEW=20
MAX_DIFF_SIZE=5000
ENABLE_INLINE_COMMENTS=false
SKIP_PATTERNS=node_modules,dist,build,*.lock,*.min.js,*.min.css

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# RAG Configuration
RAG_KNOWLEDGE_BASE=frontend-best-practices
RAG_ENABLED=true

# CORS Configuration
CORS_ORIGIN=*

# Optional: Redis (if using)
# REDIS_URL=redis://localhost:6379

# Optional: Sentry (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Optional: API Key for manual triggers
# API_KEY=your_api_key_for_manual_review_triggers